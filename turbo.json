{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env.*local"],
  "globalPassThroughEnv": ["PORT", "NODE_ENV", "npm_lifecycle_event"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["^build"],
      "persistent": true
    },
    "check:types": {
      "outputs": [".cache/tsbuildinfo.json"]
    },
    "//#check": {
      "cache": false
    },
    "//#fix": {},
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    }
  }
}
