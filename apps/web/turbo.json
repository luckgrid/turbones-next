{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "env": ["DOTENV_*", "NEXT_PUBLIC_*", "*_API_KEY"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "dev": {
      "env": ["DOTENV_*", "NEXT_PUBLIC_*", "*_API_KEY"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "persistent": true
    },
    "start": {
      "env": ["DOTENV_*", "NEXT_PUBLIC_*", "*_API_KEY"],
      "persistent": true
    }
  }
}
